{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "refresh compile commands",
            "type": "shell",
            "command": "bazel run @hedron_compile_commands//:refresh_all",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "bazel build (debug)",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "--compilation_mode=dbg",
                "--spawn_strategy=local",
                "--copt=\"-g\"",
                "--strip=\"never\"",
                "//${relativeFileDirname}:${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
